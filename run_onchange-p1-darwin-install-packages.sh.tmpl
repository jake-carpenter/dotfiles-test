{{ end }}

# NPM packages
packages=(
{{ range .packages.npm.common -}}
{{ . | quote }}
{{ end -}}
)

missing_packages=()

echo "\n>>> ğŸš€ Checking for missing NPM packages..."

for package in $packages; do
  if ! npm list $package -g --parseable 2>/dev/null | grep -q $package; then
    echo "  âŒ $package"
    missing_packages+=($package)
  else
    echo "  âœ… $package"
  fi
done

if [[ ${#missing_packages[@]} -gt 0 ]]; then
  echo "\n>>> ğŸš€ Installing missing packages..."
  npm -g install ${missing_packages[@]}
  echo "  âœ… All missing packages have been installed."
else
  echo "\nğŸ‘ All packages are already installed."
fi
